<tr>
  <th scope="row">
    <%= image_tag team.logo.url, class: "img-xs rounded-circle" %>
  </th>
  <td><%= link_to team.name, admin_team_path(team) %></td>
  <td><%= team.description %></td>
  <td><%= team.leader.name if team.leader %></td>
  <td><%= team.users.size %></td>
  <td><%= link_to t(".edit"), edit_admin_team_path(team) %> | <%= link_to t(".delete"), admin_team_path(team), method: :delete, data: {confirm: t(".confirm_delete")} %></td>
</tr>
